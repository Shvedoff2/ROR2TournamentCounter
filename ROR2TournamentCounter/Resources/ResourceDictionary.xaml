<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="Bombardier" >/Resources/Fonts/#Bombardier</FontFamily>
    <Style TargetType="TextBlock" x:Key="TBBlue">
        <Setter Property="FontFamily" Value="{DynamicResource Bombardier}"/>
        <Setter Property="Foreground" Value="#c2d6ef"/>
    </Style>
    <Style TargetType="TextBox" x:Key="TBNick">
        <Setter Property="FontFamily" Value="{DynamicResource Bombardier}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#302a36"/>
        <Setter Property="BorderBrush" Value="#575262"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="55"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>